<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Account Information</title>
    <link rel="stylesheet" href="/css/AddressBook.css">
    <!-- 链接 -->
    <%- include('./layouts/hearderLink.ejs')%>
</head>


<body>
    <!-- 顶部导航 -->
    <%- include('./layouts/header.ejs')%>

    <!-- 中间部分 top -->
    <div class="content clearfix">
        <!-- 标题 -->
        <div class="page-header">
            <h1><%- include('./template/userName.ejs')%></h1>
            <div class="hr"></div>
        </div>

        <!-- 左边 导航栏 -->
        <%- include('./layouts/navbar.ejs')%>


        <form action="" id="add-usering" class="login-warp">
            <!--右边  -->
            <div class="newadd-right clearfix">
                <div class="wrapper-grid1">
                    <h2>帐户信息</h2>
                    <div class="hr hrtwo"></div>
                </div>
                <div class="newadd-right-title">
                    <i class="fa fa-caret-down  fa-1x"></i>
                    <select name="prefix" id="prefix" class="prefix" title="招呼">
                        <option>先生</option>
                        <option>太太</option>
                        <option>女士</option>
                        <option value="" selected="selected">标题</option>
                    </select>
                </div>

                <div class="form-group" id="form-group">
                    <div class="input-box">
                        <input type="text" id="firstname" name="firstname" value="Dan" title="名字"
                            placeholder="First name *" class="input-text required-entry">
                    </div>
                </div>

                <div class="form-group" id="form-group">
                    <div class="input-box">
                        <input type="text" id="lastname" name="lastname" value="Xu" title="姓" placeholder="last name *"
                            class="input-text required-entry">
                    </div>
                </div>

                <div class="form-group" id="form-group">
                    <div class="input-box">
                        <input type="text" id="email" name="email" value="email" title="邮箱" placeholder="email "
                            class="input-text required-entry">
                    </div>
                </div>

                <div class="form-group" id="form-group">
                    <div class="input-box">
                        <input type="text" name="password" value="" title="密码" placeholder="password *"
                            class="input-text required-entry " id="telephone">
                    </div>
                </div>


                <div class="form-group form-help">
                    <p>*必填字段</p>
                </div>

                <div class="form-group form-buttons last">
                    <input type="submit" class="savebtn" value="保存">
                </div>
            </div>
        </form>
        <!-- 遮罩层 start -->
        <%- include('./layouts/masklayer.ejs')%>
    </div>

    <!-- 底部 -->
    <%- include('./layouts/footer.ejs')%>

    <!-- 底部链接 -->
    <%- include('./layouts/footerLink.ejs')%>

    <script src="/js/AccountInformation.js"></script>

    <script>
        function show() {
            $.ajax({
                type: 'get',
                url: '/admin/showNamense',
                data: '',
                success: function (data) {
                    let nameDate = template('userName_template', data[0])
                    $('.page-header h1').text(nameDate)
                    console.log(nameDate)
                }
            })
        }
        show()
    </script>

</body>

</html>