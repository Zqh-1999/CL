<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>地址簿</title>
    <link rel="stylesheet" href="/css/AddressBook.css">
    <!-- 链接 -->
    <%- include('./layouts/hearderLink.ejs')%>
</head>

<body>
    <!-- 顶部导航 -->
    <%- include('./layouts/header.ejs')%>

    <!-- 中间部分 top -->
    <div class="content clearfix " id="content">
        <!-- 标题 -->
        <div class="page-header">
            <h1><%- include('./template/userName.ejs')%></h1>
            <div class="hr"></div>
        </div>

        <!-- 左边 导航栏 -->
        <%- include('./layouts/navbar.ejs')%>

        <form action="" id="add-users" class="login-warp">
            <!--右边  -->
            <div class="newadd-right clearfix">
                <div class="wrapper-grid1">
                    <h2>联系信息</h2>
                    <div class="hr hrtwo"></div>
                </div>
                <div class="newadd-right-title">
                    <i class="fa fa-caret-down  fa-1x"></i>
                    <select name="prefvx" id="prefvx" class="prefix" title="招呼">
                        <option>先生</option>
                        <option>太太</option>
                        <option>女士</option>
                        <option value="" selected="selected">标题</option>
                    </select>
                </div>

                <div class="form-group" id="form-group">
                    <div class="input-box">
                        <input type="text" id="firstname" name="firstname" value="Dan" title="名字"
                            placeholder="First name *" class="input-text required-entry">
                    </div>
                </div>

                <div class="form-group" id="form-group">
                    <div class="input-box">
                        <input type="text" id="lastname" name="lastname" value="Xu" title="姓" placeholder="last name *"
                            class="input-text required-entry">
                    </div>
                </div>

                <div class="form-group" id="form-group">
                    <div class="input-box">
                        <input type="text" id="company" name="company" value="company" title="公司" placeholder="Company "
                            class="input-text required-entry">
                    </div>
                </div>

                <div class="form-group" id="form-group">
                    <div class="input-box">
                        <input type="tel" name="telephone" value="" title="账单电话号码"
                            placeholder="Billing Telephone Number *" class="input-text required-entry " id="telephone">
                    </div>
                </div>
                <div class="form-group" id="form-group">
                    <div class="input-box">
                        <input type="tel" name="contact_telephone" value="" title="联系电话号码"
                            placeholder="Contact Telephone number" class="input-text" id="contact_telephone">
                    </div>
                </div>
                <div class="wrapper-grid1">
                    <h2>地址</h2>
                    <div class="hr hrtwo"></div>
                </div>
                <div class="form-group" id="form-group">
                    <div class="input-box">
                        <input type="text" name="street1" value="" title="街道地址" id="street_1"
                            placeholder="Street Address *" class="input-text required-entry">
                    </div>
                </div>
                <div class="form-group" id="form-group">
                    <div class="input-box">
                        <input type="text" name="street2" value="" title="街道地址2" id="street_2"
                            placeholder="Continue Address" class="input-text">
                    </div>
                </div>
                <div class="form-group" id="form-group">
                    <div class="input-box">
                        <input type="text" name="city" value="" title="市" placeholder="City *"
                            class="input-text required-entry" id="city">
                    </div>
                </div>
                <div class="form-group" id="form-group">
                    <div class="input-box">
                        <input type="text" name="postcode" value="" title="邮编/邮政编码" id="zip"
                            placeholder="Zip/Postal Code *"
                            class="input-text validate-zip-international required-entry">
                    </div>
                </div>

                <div class="newadd-right-title newadd-right-title2">
                    <i class="fa fa-caret-down  fa-1x " id="fa-fw2"></i>
                    <select name="prefox" id="prefox" class="prefix" title="国家">
                        <option selected="selected">美国</option>
                        <option>澳大利亚</option>
                        <option>中国</option>
                        <option>夏威夷</option>
                    </select>
                </div>

                <div class="newadd-right-title newadd-right-title2">
                    <i class="fa fa-caret-down  fa-1x " id="fa-fw2"></i>
                    <select name="prefex" id="prefex" class="prefix" title="地区">
                        <option selected="selected">请选择地区,州或省</option>
                        <option>加州</option>
                        <option>佛罗里达</option>
                        <option>阿拉巴马</option>
                        <option>阿拉斯加州</option>
                    </select>
                </div>

                <div class="form-group form-help">
                    <p>*必填字段</p>
                </div>

                <div class="form-group form-buttons last">
                    <input type="submit" class="savebtn" value="保存地址">
                </div>
            </div>
        </form>
        <!-- 遮罩层 start -->
        <%- include('./layouts/masklayer.ejs')%>

    </div>
    <!-- 底部 -->
    <%- include('./layouts/footer.ejs')%>

    <!-- 底部链接 -->
    <%- include('./layouts/footerLink.ejs')%>

    <script src="/js/AddressBook.js"></script>

    <script>
        function show() {
            $.ajax({
                type: 'get',
                url: '/admin/showName',
                data: '',
                success: function (data) {
                    let nameDate = template('userName_template', data[0])
                    $('.page-header h1').text(nameDate)
                    console.log(nameDate)
                }
            })
        }
        show();
    </script>
</body>

</html>